<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<%- include('../includes/nav.ejs') %>

<main>
    <% if (validationErrors) { %>
        <% for(const error of validationErrors) { %>
            <div class="alert alert-danger"><%= error.msg %></div>
        <% } %>
    <% } %>
    <h1><%= pageTitle %></h1>
    <form action="/signup" class="login-form" method="POST" novalidate>
        <div class="form-control">
            <label for="email">Email</label>
            <input
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                    type="email"
                    name="email"
                    id="email"
                    value="<%= oldInput.email %>"
            >
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <input
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                    type="password"
                    name="password"
                    id="password"
                    value="<%= oldInput.password %>"
            >
        </div>
        <div class="form-control">
            <label for="confirmPassword">Confirm Password</label>
            <input
                    class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                    type="password"
                    name="confirmPassword"
                    id="confirmPassword"
                    value="<%= oldInput.confirmPassword %>">
        </div>
        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        <button class="btn" type="submit">Submit</button>
    </form>
</main>

<%- include('../includes/end.ejs') %>